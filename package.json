{
  "name": "template_es6",
  "version": "1.0.0",
  "description": "Template project for ES6 with Browserify",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "build-prod": "browserify app/app.js -o  -t [ babelify --presets [ es2015 ] ] | uglifyjs -mc > public/bundle.js",
    "start": "node scripts/server.js",
    "test": "tape -r babel-register app/**/*test.js"
  },
  "author": "jdtibbs",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "shelljs": "^0.5.3",
    "tape": "^4.4.0",
    "uglifyjs": "^2.4.10"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
