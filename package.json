{
  "name": "template_es6",
  "version": "1.0.0",
  "description": "Template project for ES6 with Browserify",
  "main": "index.js",
  "scripts": {
    "build": "node scripts/build.js ",
    "build-prod": "node scripts/build.js -prod",
    "start": "node scripts/server.js",
    "test": "tape -r babel-register app/**/*test.js",
    "watch-css": "catw -wv ./app/app.css -o ./public/bundle.css",
    "watch-js": "watchify ./app/app.js -o ./public/bundle.js -t [ babelify --presets [ es2015 ] ] -v",
    "watch": "npm run watch-css & npm run watch-js"
  },
  "author": "jdtibbs",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "catw": "^1.0.1",
    "shelljs": "^0.5.3",
    "tape": "^4.4.0",
    "uglify-js": "^2.6.1",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
